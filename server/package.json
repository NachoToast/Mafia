{
    "name": "mafia-server",
    "version": "0.0.0",
    "private": true,
    "main": "build/server.js",
    "license": "MIT",
    "author": {
        "name": "NachoToast",
        "url": "https://github.com/NachoToast"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/NachoToast/Mafia",
        "directory": "server"
    },
    "scripts": {
        "start": "nodemon src/server.ts",
        "build": "tsc --project tsconfig.build.json",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src --ext .ts --max-warnings=0",
        "test": "vitest",
        "coverage": "vitest run --coverage --config vite.config.ts",
        "check:apispec": "ts-node scripts/checkDeadLinks.ts",
        "check-all": "npm run typecheck && npm run lint && npm run check:apispec && npm run test"
    },
    "devDependencies": {
        "@types/cors": "^2.8.14",
        "@types/express": "^4.17.18",
        "@types/jsonwebtoken": "^9.0.3",
        "@types/node": "^20.8.2",
        "@types/supertest": "^2.0.14",
        "@types/swagger-ui-express": "^4.1.4",
        "@typescript-eslint/eslint-plugin": "^6.7.4",
        "@typescript-eslint/parser": "^6.7.4",
        "@vitest/coverage-v8": "^0.34.6",
        "eslint": "^8.50.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.28.1",
        "mongodb-memory-server": "^9.0.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3",
        "supertest": "^6.3.3",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2",
        "vitest": "^0.34.6"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "discord-api-types": "^0.37.60",
        "express": "^4.18.2",
        "express-openapi-validator": "^5.0.6",
        "express-rate-limit": "^7.0.2",
        "jsonwebtoken": "^9.0.2",
        "mongodb": "^6.1.0",
        "socket.io": "^4.7.2",
        "swagger-ui-express": "^5.0.0"
    },
    "nodemonConfig": {
        "watch": [
            "src",
            "../shared",
            "../config.json"
        ]
    }
}
